@model MDUA.Entities.UserLoginResult
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Dashboard";
    var canAddProduct = Model.AuthorizedActions?
            .Any(a => a.Trim().Equals("Product.Add", StringComparison.OrdinalIgnoreCase)) ?? false;
}

<!-- Top Bar -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-0">Overview</h2>
        <div class="text-muted small">Welcome back, @Model.UserLogin.UserName</div>
    </div>
</div>



<!-- Info Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="glass-card p-3">
            <div class="text-muted small text-uppercase fw-bold">User ID</div>
            <div class="fs-4 fw-bold">@Model.UserLogin.Id</div>
            <div class="small text-muted">System Identifier</div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="glass-card p-3">
            <div class="text-muted small text-uppercase fw-bold">Role</div>
            <div class="fs-4 fw-bold text-danger">@Model.RoleName</div>
            <div class="small text-muted">Access Level</div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="glass-card p-3">
            <div class="text-muted small text-uppercase fw-bold">Email</div>
            <div class="fs-5 fw-semibold text-truncate">@Model.UserLogin.Email</div>
            <div class="small text-muted">Verified Contact</div>
        </div>
    </div>
</div>

<!-- Recent Products Section -->
@if (Model.CanViewProducts)
{
    <div class="glass-card p-4 mb-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="fw-bold mb-0">Recent Products</h5>

            <div class="d-flex align-items-center gap-3">
                @if (canAddProduct)
                {
                    <a href="@Url.Action("Add", "Product")" class="btn btn-sm btn-danger rounded-pill shadow-sm px-3">
                        <span class="me-1">＋</span> Add Product
                    </a>
                }
                <a href="@Url.Action("AllProducts", "Product")" class="text-danger text-decoration-none small fw-bold">View All &rarr;</a>
            </div>
        </div>

        <div class="table-wrapper">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Created At</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model.LastFiveProducts)
                    {
                        <tr>
                            <td class="fw-semibold">@p.ProductName</td>
                            <td>@p.CreatedAt?.ToString("dd MMM yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@section Scripts {
    <!-- No specific scripts needed for dashboard now -->
}