@model MDUA.Entities.UserLoginResult
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Dashboard";
    var canAddProduct = Model.AuthorizedActions?
            .Any(a => a.Trim().Equals("Product.Add", StringComparison.OrdinalIgnoreCase)) ?? false;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-0">Overview</h2>
        <div class="text-muted small">Welcome back, @Model.UserLogin.UserName</div>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="glass-card p-3">
            <div class="text-muted small text-uppercase fw-bold">User ID</div>
            <div class="fs-4 fw-bold">@Model.UserLogin.Id</div>
            <div class="small text-muted">System Identifier</div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="glass-card p-3">
            <div class="text-muted small text-uppercase fw-bold">Role</div>
            <div class="fs-4 fw-bold text-danger">@Model.RoleName</div>
            <div class="small text-muted">Access Level</div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="glass-card p-3">
            <div class="text-muted small text-uppercase fw-bold">Email</div>
            <div class="fs-5 fw-semibold text-truncate">@Model.UserLogin.Email</div>
            <div class="small text-muted">Verified Contact</div>
        </div>
    </div>
</div>

@if (Model.CanViewProducts)
{
    <div class="glass-card p-4 mb-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="fw-bold mb-0">Recent Products</h5>

            <div class="d-flex align-items-center gap-3">
                @if (canAddProduct)
                {
                    <button type="button" class="btn btn-sm btn-danger rounded-pill shadow-sm px-3" data-bs-toggle="modal" data-bs-target="#addProductModal">
                        <span class="me-1">＋</span> Add Product
                    </button>
                }
                <a href="@Url.Action("AllProducts", "Product")" class="text-danger text-decoration-none small fw-bold">View All &rarr;</a>
            </div>
        </div>

        <div class="table-wrapper">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Created At</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model.LastFiveProducts)
                    {
                        <tr>
                            <td class="fw-semibold">@p.ProductName</td>
                            <td>@p.CreatedAt?.ToString("dd MMM yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@section Modals {
    <div class="modal fade" id="addProductModal" tabindex="-1" aria-labelledby="addProductModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content modal-custom">
                <form method="post" asp-controller="Product" asp-action="Add">
                    <div class="modal-header modal-header-custom">
                        <h5 class="modal-title" id="addProductModalLabel">Add New Product</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body p-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Product Name</label>
                            <input type="text" name="ProductName" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Base Price</label>
                            <input type="number" step="0.01" name="BasePrice" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Description</label>
                            <textarea name="Description" class="form-control" rows="3"></textarea>
                        </div>
                        <div class="row g-3 mb-3">
                            <div class="col-6">
                                <label class="form-label fw-bold">Reorder Level</label>
                                <input type="number" name="ReorderLevel" class="form-control" value="0" required />
                            </div>
                            <div class="col-6">
                                <label class="form-label fw-bold">Slug</label>
                                <input type="text" name="Slug" class="form-control" required />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Category</label>
                            <select name="CategoryId" class="form-select" required>
                                <option value="">-- Select Category --</option>
                                @foreach (var c in Model.Categories)
                                {
                                    <option value="@c.Id">@c.Name</option>
                                }
                            </select>
                        </div>
                        <div id="attributes-container" class="p-3 bg-light rounded border mb-3">
                            <div class="attribute-row mb-2" data-attr-index="0">
                                <label class="small text-muted fw-bold">Attribute</label>
                                <select name="Attributes[0].AttributeId" class="attribute-select form-select mb-2">
                                    <option value="">-- Select Attribute --</option>
                                    @foreach (var a in Model.Attributes)
                                    {
                                        <option value="@a.Id">@a.Name</option>
                                    }
                                </select>
                                <div class="attribute-values-container"></div>
                            </div>
                            <button type="button" id="add-attribute" class="btn btn-sm btn-outline-secondary w-100 dashed-border">+ Add Attribute</button>
                        </div>

                        <div id="variants-container" class="mt-3"></div>

                        <div class="form-check">
                            <input type="checkbox" name="IsActive" value="true" class="form-check-input" id="IsActive" checked />
                            <input type="hidden" name="IsActive" value="false" />
                            <label class="form-check-label" for="IsActive">Product is Active</label>
                        </div>
                    </div>
                    <div class="modal-footer border-top-0">
                        <button type="button" class="btn btn-light text-muted" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Add Product</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="~/js/product.js"></script>
}