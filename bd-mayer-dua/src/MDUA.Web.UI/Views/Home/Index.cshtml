@model MDUA.Entities.UserLoginResult
@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/login.css" />

<div class="login-wrapper">
    <div class="login-container">
        <div class="login-header">
            <h1>Welcome Back</h1>
            <p>Sign in to continue to your account</p>
        </div>

        <div class="login-body">
            <form method="post" asp-action="Index">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text"
                           name="username"
                           id="username"
                           class="form-control-custom"
                           placeholder="Enter your username"
                           required />
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password"
                           name="password"
                           id="password"
                           class="form-control-custom"
                           placeholder="Enter your password"
                           required />
                </div>

                <button type="submit" class="btn-login">Sign In</button>
            </form>

            @if (Model != null)
            {
                <div class="divider">
                    <span>Login Result</span>
                </div>

                @if (Model.IsSuccess && Model.UserLogin != null)
                {
                    <div class="alert-custom alert-success-custom">
                        <h3>✓ Login Successful!</h3>
                        <div class="result-divider"></div>
                        <div class="user-info">
                            <p><strong>ID:</strong> @Model.UserLogin.Id</p>
                            <p><strong>Username:</strong> @Model.UserLogin.UserName</p>
                            <p><strong>Email:</strong> @Model.UserLogin.Email</p>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert-custom alert-danger-custom">
                        <h3>✗ Login Failed</h3>
                        <div class="result-divider"></div>
                        <p>@Model.ErrorMessage</p>
                    </div>
                }
            }
        </div>
    </div>
</div>