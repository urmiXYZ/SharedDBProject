@model IEnumerable<MDUA.Entities.Product>

<h2>All Products</h2>

<div class="mb-3">
    <a href="@Url.Action("Dashboard", "Home")" class="btn btn-secondary">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
        Back to Dashboard
    </a>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Reorder Level</th>
            <th>Slug</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Is Variant Based</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.ProductName</td>
                <td>@p.CategoryName</td>
                <td>@p.ReorderLevel</td>
                <td>@p.Slug</td>
                <td>@p.CreatedAt?.ToString("dd MMM yyyy")</td>
                <td>@p.UpdatedAt?.ToString("dd MMM yyyy")</td>
                <td>@(p.IsVariantBased ?? false ? "Yes" : "No")</td>
                <td>@(p.IsActive ? "Active" : "Inactive")</td>
                <td>
                    <a href="@Url.Action("Details", "Product", new { id = p.Id })" class="btn btn-sm btn-info" title="Details">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="12" y1="16" x2="12" y2="12"></line>
                            <line x1="12" y1="8" x2="12" y2="8"></line>
                        </svg>
                    </a>
                    <a href="@Url.Action("Edit", "Product", new { id = p.Id })" class="btn btn-sm btn-warning" title="Edit">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M12 20h9"></path>
                            <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4 12.5-12.5z"></path>
                        </svg>
                    </a>
                    <a href="@Url.Action("Delete", "Product", new { id = p.Id })" class="btn btn-sm btn-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this product?');">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="3 6 5 6 21 6"></polyline>
                            <path d="M19 6l-1 14H6L5 6"></path>
                            <path d="M10 11v6"></path>
                            <path d="M14 11v6"></path>
                        </svg>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
