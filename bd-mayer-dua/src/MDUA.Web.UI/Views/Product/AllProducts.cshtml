@model IEnumerable<MDUA.Entities.Product>
@{
    ViewData["Title"] = "Product List";

}
<link rel="stylesheet" href="~/css/products.css" />

<div class="products-container">
    <div class="products-header">
        <h2>All Products</h2>
        <a href="@Url.Action("Dashboard", "Home")" class="btn-back">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="15 18 9 12 15 6"></polyline>
            </svg>
            Back to Dashboard
        </a>
    </div>

    <div class="table-wrapper">
        @Html.AntiForgeryToken() <table class="products-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Reorder Level</th>
                    <th>Slug</th>
                    <th>Base Price</th>
                    <th>Created At</th>
                    <th>Updated At</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var p in Model)
                    {
                        <tr data-product-row-id="@p.Id">
                            <td data-product-name="@p.ProductName">@p.ProductName</td>
                            <td><span class="category-tag">@p.CategoryName</span></td>
                            <td>@p.ReorderLevel</td>
                            <td>@p.Slug</td>
                            <td class="price-cell">
                                @if (p.ActiveDiscount != null)
                                {
                                    <span class="original-price">Tk. @p.BasePrice?.ToString("0.00")</span>
                                    <br />
                                    <span class="discounted-price">Tk. @p.SellingPrice.ToString("0.00")</span>
                                }
                                else
                                {
                                    <span>Tk. @p.BasePrice?.ToString("0.00")</span>
                                }
                            </td>
                            <td><span class="date-text">@p.CreatedAt?.ToString("dd MMM yyyy")</span></td>
                            <td><span class="date-text">@p.UpdatedAt?.ToString("dd MMM yyyy")</span></td>
                            <td>
                                <button type="button"
                                        class="status-badge @(p.IsActive ? "status-active" : "status-inactive") js-toggle-status"
                                        data-product-id="@p.Id"
                                        title="Click to toggle status">
                                    @(p.IsActive ? "Active" : "Inactive")
                                </button>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <button type="button" class="btn-action btn-success js-manage-discounts"
                                            title="Manage Discounts"
                                            data-bs-toggle="modal"
                                            data-bs-target="#productDiscountsModal"
                                            data-product-id="@p.Id"
                                            data-product-name="@p.ProductName">
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="19" y1="5" x2="5" y2="19"></line><circle cx="6.5" cy="6.5" r="2.5"></circle><circle cx="17.5" cy="17.5" r="2.5"></circle></svg>
                                    </button>
                                    <button type="button"
                                            class="btn-action btn-success btn-view-variants"
                                            title="View Variants"
                                            data-bs-toggle="modal"
                                            data-bs-target="#productVariantsModal"
                                            data-product-id="@p.Id">
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M8 6h13"></path>
                                            <path d="M8 12h13"></path>
                                            <path d="M8 18h13"></path>
                                            <path d="M3 6h.01"></path>
                                            <path d="M3 12h.01"></path>
                                            <path d="M3 18h.01"></path>
                                        </svg>
                                    </button>
                                    <button type="button"
                                            class="btn-action btn-info js-view-details"
                                            title="Details"
                                            data-bs-toggle="modal"
                                            data-bs-target="#productDetailsModal"
                                            data-product-id="@p.Id">
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <circle cx="12" cy="12" r="10"></circle>
                                            <line x1="12" y1="16" x2="12" y2="12"></line>
                                            <line x1="12" y1="8" x2="12" y2="8"></line>
                                        </svg>
                                    </button>
                                    <button type="button"
                                            class="btn-action btn-warning js-edit-product"
                                            title="Edit"
                                            data-bs-toggle="modal"
                                            data-bs-target="#editProductModal"
                                            data-product-id="@p.Id"
                                            data-product-name="@p.ProductName">
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M12 20h9"></path>
                                            <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4 12.5-12.5z"></path>
                                        </svg>
                                    </button>
                                    <button type="button"
                                            class="btn-action btn-danger js-delete-product"
                                            title="Delete"
                                            data-bs-toggle="modal"
                                            data-bs-target="#deleteProductModal"
                                            data-product-id="@p.Id"
                                            data-product-name="@p.ProductName">
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <polyline points="3 6 5 6 21 6"></polyline>
                                            <path d="M19 6l-1 14H6L5 6"></path>
                                            <path d="M10 11v6"></path>
                                            <path d="M14 11v6"></path>
                                        </svg>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9">
                            <div class="empty-state">
                                <h3>No Products Found</h3>
                                <p>There are no products to display.</p>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="productVariantsModal" tabindex="-1" aria-labelledby="productVariantsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content modal-custom">
            <div class="modal-header modal-header-custom">
                <h5 class="modal-title" id="productVariantsModalLabel">
                    Variants <span id="modal-product-name"></span>
                </h5>
                <button type="button" class="btn-close-custom" data-bs-dismiss="modal" aria-label="Close">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>
            <div class="modal-body modal-body-custom" id="modal-variants-content">
                <div class="loading-spinner"></div>
            </div>
            <div class="modal-footer modal-footer-custom">
                <button type="button" class="btn-modal-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="productDetailsModal" tabindex="-1" aria-labelledby="productDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content modal-custom">
            <div class="modal-header modal-header-custom">
                <h5 class="modal-title" id="productDetailsModalLabel">
                </h5>
                <button type="button" class="btn-close-custom" data-bs-dismiss="modal" aria-label="Close">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>
            <div class="modal-body modal-body-custom" id="modal-details-content">
                <div class="loading-spinner"></div>
            </div>
            <div class="modal-footer modal-footer-custom">
                <button type="button" class="btn-modal-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteProductModal" tabindex="-1" aria-labelledby="deleteProductModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content modal-custom">
            <div class="modal-header modal-header-danger">
                <h5 class="modal-title" id="deleteProductModalLabel">
                    <div class="delete-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="3 6 5 6 21 6"></polyline>
                            <path d="M19 6l-1 14H6L5 6"></path>
                            <path d="M10 11v6"></path>
                            <path d="M14 11v6"></path>
                        </svg>
                    </div>
                    Delete Product
                </h5>
                <button type="button" class="btn-close-custom" data-bs-dismiss="modal" aria-label="Close">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>
            <div class="modal-body modal-body-danger">
                <div class="delete-warning">
                    <div class="warning-icon">!</div>
                    <div class="delete-warning-content">
                        <p><strong>Are you sure you want to permanently delete this product?</strong></p>
                        <p>This action cannot be undone and will delete all associated variants and data.</p>
                    </div>
                </div>

                <div class="product-name-highlight">
                    <span id="modal-delete-product-name"></span>
                </div>

                <p class="danger-text">
                    Once deleted, this product cannot be recovered.
                </p>

                <div class="delete-confirmation">
                    <input type="checkbox" id="confirm-delete-checkbox" />
                    <label for="confirm-delete-checkbox">
                        I understand that this action is permanent and irreversible
                    </label>
                </div>
            </div>
            <div class="modal-footer modal-footer-custom">
                <button type="button" class="btn-modal-secondary" data-bs-dismiss="modal">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                    Cancel
                </button>
                <button type="button" class="btn-modal-danger" id="confirm-delete-button" disabled>
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="3 6 5 6 21 6"></polyline>
                        <path d="M19 6l-1 14H6L5 6"></path>
                    </svg>
                    Delete Product
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editProductModal" tabindex="-1" aria-labelledby="editProductModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content modal-custom">
            <div class="modal-header modal-header-custom">
                <h5 class="modal-title" id="editProductModalLabel">
                    Edit Product
                </h5>
                <button type="button" class="btn-close-custom" data-bs-dismiss="modal" aria-label="Close">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>
            <div class="modal-body modal-body-custom" id="modal-edit-content">
                <div class="loading-spinner"></div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteVariantModal" tabindex="-1" aria-labelledby="deleteVariantModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content modal-custom">
            <div class="modal-header modal-header-danger">
                <h5 class="modal-title" id="deleteVariantModalLabel">
                    <div class="delete-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="3 6 5 6 21 6"></polyline>
                            <path d="M19 6l-1 14H6L5 6"></path>
                            <path d="M10 11v6"></path>
                            <path d="M14 11v6"></path>
                        </svg>
                    </div>
                    Delete Variant
                </h5>
                <button type="button" class="btn-close-custom" data-bs-dismiss="modal" aria-label="Close">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>

            <div class="modal-body modal-body-danger">
                <div class="delete-warning">
                    <div class="warning-icon">!</div>
                    <div class="delete-warning-content">
                        <p><strong>Are you sure you want to delete this variant?</strong></p>
                        <p>This will remove the specific size/color combination from this product.</p>
                    </div>
                </div>

                <div class="product-name-highlight">
                    <span id="modal-delete-variant-name"></span>
                </div>

                <p class="danger-text">This action cannot be undone.</p>
            </div>

            <div class="modal-footer modal-footer-custom">
                <button type="button" class="btn-modal-secondary" data-bs-dismiss="modal">Cancel</button>

                <button type="button" class="btn-modal-danger" id="confirm-delete-variant-button">
                    Delete Variant
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="duplicateVariantModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content modal-custom">
            <div class="modal-header modal-header-warning">
                <h5 class="modal-title">
                    Duplicate Variant
                </h5>
                <button type="button" class="btn-close-custom" data-bs-dismiss="modal" aria-label="Close">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>
            <div class="modal-body modal-body-warning">
                <div class="warning-icon-large">
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
                        <line x1="12" y1="9" x2="12" y2="13"></line>
                        <line x1="12" y1="17" x2="12.01" y2="17"></line>
                    </svg>
                </div>
                <h4>Variant Already Exists</h4>
                <p class="text-muted">
                    You cannot add this variant because it is already in the list:
                </p>
                <div class="p-3 bg-light rounded border mt-3">
                    <strong id="duplicate-variant-name" class="text-dark"></strong>
                </div>
            </div>
            <div class="modal-footer modal-footer-custom justify-content-center">
                <button type="button" class="btn-modal-secondary" data-bs-dismiss="modal">
                    OK, I understand
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addVariantAttributeModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-sm modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-light py-2">
                <h6 class="modal-title fw-bold">Add Missing Attribute</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="form-add-attr-to-variant">
                    <input type="hidden" id="target-variant-id" name="variantId" />
                    <div class="mb-2">
                        <label class="small text-muted">Attribute</label>
                        <select class="form-control form-control-sm" id="missing-attr-select">
                            <option value="">Loading...</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="small text-muted">Value</label>
                        <select class="form-control form-control-sm" id="missing-value-select" name="attributeValueId" disabled>
                            <option value="">Select Value</option>
                        </select>
                    </div>
                    <button type="button" id="btn-confirm-add-attr" class="btn btn-sm btn-primary w-100">Add & Update</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="productDiscountsModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content modal-custom">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">Discounts: <span id="modal-discount-product-name"></span></h5>
                <button type="button" class="btn-close-custom" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="modal-discounts-content">
                <div class="loading-spinner"></div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteDiscountModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content modal-custom">
            <div class="modal-header modal-header-danger">
                <h5 class="modal-title">
                    <div class="delete-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="3 6 5 6 21 6"></polyline>
                            <path d="M19 6l-1 14H6L5 6"></path>
                            <path d="M10 11v6"></path>
                            <path d="M14 11v6"></path>
                        </svg>
                    </div>
                    Delete Discount
                </h5>
                <button type="button" class="btn-close-custom" data-bs-dismiss="modal" aria-label="Close">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>

            <div class="modal-body modal-body-danger">
                <div class="delete-warning">
                    <div class="warning-icon">!</div>
                    <div class="delete-warning-content">
                        <p><strong>Are you sure you want to delete this discount?</strong></p>
                        <p>This will remove the discount rule from this product immediately.</p>
                    </div>
                </div>

                <div class="product-name-highlight">
                    <span id="modal-delete-discount-info"></span>
                </div>

                <p class="danger-text">This action cannot be undone.</p>
            </div>

            <div class="modal-footer modal-footer-custom">
                <button type="button" class="btn-modal-secondary" data-bs-dismiss="modal">Cancel</button>

                <button type="button" class="btn-modal-danger" id="confirm-delete-discount-button">
                    Delete Discount
                </button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        window.productConfig = {
            urls: {
                getVariantsPartial: '@Url.Action("GetVariantsPartial", "Product")',
                addSingleVariant: '@Url.Action("AddSingleVariant", "Product")',
                toggleStatus: '@Url.Action("ToggleStatus", "Product")',
                getProductDetailsPartial: '@Url.Action("GetProductDetailsPartial", "Product")',
                deleteConfirmed: '@Url.Action("DeleteConfirmed", "Product")',
                getEditPartial: '@Url.Action("GetEditPartial", "Product")',
                deleteVariant: '@Url.Action("DeleteVariant", "Product")',
                updateVariantPrice: '@Url.Action("UpdateVariantPrice", "Product")',
                getMissingAttributes: '@Url.Action("GetMissingAttributes", "Product")',
                addAttributeToVariant: '@Url.Action("AddAttributeToVariant", "Product")',
                getAttributeValues: '@Url.Action("GetAttributeValues", "Product")',
                getDiscounts: '@Url.Action("GetDiscountsPartial", "Product")',
                addDiscount: '@Url.Action("AddDiscount", "Product")',
                updateDiscount: '@Url.Action("UpdateDiscount", "Product")',
                deleteDiscount: '@Url.Action("DeleteDiscount", "Product")',
                getUpdatedPrice: '@Url.Action("GetUpdatedPrice", "Product")' // Add this
            }
        };
    </script>

    <script src="~/js/products-index.js"></script>
}