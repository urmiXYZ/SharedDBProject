@model dynamic
@{
    string currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
}

<div class="sidebar glass-panel d-flex flex-column h-100">
    <div class="d-flex align-items-center mb-4">
        <div class="brand-logo me-2">M</div>
        <div>
            <div class="fw-bold">MDUA Admin</div>
            <div class="small text-muted" style="font-size: 0.7rem; letter-spacing: 0.1em;">MANAGEMENT</div>
        </div>
    </div>

    <div class="mb-2 text-uppercase small text-muted fw-semibold ps-2">Menu</div>
    <ul class="nav nav-pills flex-column mb-auto">
        <li class="nav-item">
            <a class="nav-link @(currentAction == "Dashboard" ? "active" : "")" href="@Url.Action("Dashboard", "Home")">
                <span>📊</span> Dashboard
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(currentAction == "AllProducts" ? "active" : "")" href="@Url.Action("AllProducts", "Product")">
                <span>📦</span> All Products
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">
                <span>👥</span> Customers
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">
                <span>⚙️</span> Settings
            </a>
        </li>
    </ul>

    <div class="mt-3 pt-3 border-top border-secondary-subtle">
        <form method="post" asp-controller="Home" asp-action="Logout" class="d-grid">
            <button type="submit" class="btn btn-sm btn-outline-danger w-100 d-flex align-items-center justify-content-center gap-2">
                <span>🚪</span> Logout
            </button>
        </form>
    </div>
</div>