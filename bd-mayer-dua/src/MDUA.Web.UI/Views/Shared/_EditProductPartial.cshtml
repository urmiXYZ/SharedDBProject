@model MDUA.Entities.ProductResult

<link rel="stylesheet" href="~/css/product-form.css" />

<form method="post" asp-controller="Product" asp-action="EditProduct" class="product-edit-form">
    @Html.AntiForgeryToken()

    <!-- Hidden Fields -->
    <input type="hidden" asp-for="Product.Id" />
    <input type="hidden" asp-for="Product.CreatedBy" />
    <input type="hidden" asp-for="Product.CreatedAt" />
    <input type="hidden" asp-for="Product.CompanyId" />

    <!-- Product Information Section -->
    <div class="form-section">
        <div class="form-group">
            <label asp-for="Product.ProductName" class="form-label">
                Product Name <span class="required">*</span>
            </label>
            <input asp-for="Product.ProductName" class="form-control" required />
            <span asp-validation-for="Product.ProductName" class="text-danger"></span>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label asp-for="Product.BasePrice" class="form-label">
                    Base Price <span class="required">*</span>
                </label>
                <input asp-for="Product.BasePrice" class="form-control" type="number" step="0.01" required />
                <span asp-validation-for="Product.BasePrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.ReorderLevel" class="form-label">
                    Reorder Level <span class="required">*</span>
                </label>
                <input asp-for="Product.ReorderLevel" class="form-control" type="number" required />
                <span asp-validation-for="Product.ReorderLevel" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Product.Slug" class="form-label">
                Slug <span class="required">*</span>
            </label>
            <input asp-for="Product.Slug" class="form-control" required />
            <span asp-validation-for="Product.Slug" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Product.CategoryId" class="form-label">
                Category <span class="required">*</span>
            </label>
            <select asp-for="Product.CategoryId"
                    asp-items="@(new SelectList(Model.Categories, "Id", "Name", Model.Product.CategoryId))"
                    class="form-control" required>
                <option value="">-- Select Category --</option>
            </select>
            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Product.Description" class="form-label">Description</label>
            <textarea asp-for="Product.Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>
    </div>

    <!-- Settings Section -->
    <div class="form-section">
        <h6 class="section-title">Product Settings</h6>

        <div class="form-check">
            <input type="hidden" asp-for="Product.IsActive" value="false" />
            <input asp-for="Product.IsActive" value="true" class="form-check-input" id="isActiveCheck" />
            <label class="form-check-label" for="isActiveCheck" asp-for="Product.IsActive">
                Product is Active
            </label>
        </div>
    </div>

    <!-- Footer Actions -->
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            Cancel
        </button>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Save Changes
        </button>
    </div>
</form>