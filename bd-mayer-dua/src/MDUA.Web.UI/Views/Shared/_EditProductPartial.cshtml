@model MDUA.Entities.ProductResult

<div class="edit-product-container">
    <form method="post" asp-controller="Product" asp-action="EditProduct" id="editProductForm">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="Product.Id" />
        <input type="hidden" asp-for="Product.CreatedBy" />
        <input type="hidden" asp-for="Product.CreatedAt" />
        <input type="hidden" asp-for="Product.CompanyId" />
        <input type="hidden" asp-for="Product.IsActive" />
        <input type="hidden" asp-for="Product.UpdatedAt" />

        <div class="p-2">
            <div class="mb-4">
                <label asp-for="Product.ProductName" class="form-label fw-bold text-muted small text-uppercase">Product Name</label>
                <input asp-for="Product.ProductName" class="form-control form-control-lg fw-bold" placeholder="e.g. Premium T-Shirt" required />
                <span asp-validation-for="Product.ProductName" class="text-danger small"></span>
            </div>

            <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <label asp-for="Product.CategoryId" class="form-label fw-bold text-muted small text-uppercase">Category</label>
                    <select asp-for="Product.CategoryId"
                            asp-items="@(new SelectList(Model.Categories, "Id", "Name", Model.Product.CategoryId))"
                            class="form-select" required>
                        <option value="">-- Select --</option>
                    </select>
                    <span asp-validation-for="Product.CategoryId" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Product.Slug" class="form-label fw-bold text-muted small text-uppercase">
                        Slug <span class="text-secondary" title="Cannot be edited">🔒</span>
                    </label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0 text-muted">/</span>

                        <input asp-for="Product.Slug"
                               class="form-control border-start-0 ps-0 bg-light text-secondary"
                               readonly />
                    </div>
                    <div class="form-text small text-muted" style="font-size: 0.75rem;">
                        Permanently set to protect link structure.
                    </div>
                </div>
            </div>

            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <label asp-for="Product.BasePrice" class="form-label fw-bold text-muted small text-uppercase">Base Price</label>
                    <div class="input-group">
                        <span class="input-group-text bg-success-subtle text-success fw-bold border-success-subtle">Tk.</span>
                        <input asp-for="Product.BasePrice" class="form-control border-success-subtle" type="number" step="0.01" placeholder="0.00" required />
                    </div>
                    <span asp-validation-for="Product.BasePrice" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Product.ReorderLevel" class="form-label fw-bold text-muted small text-uppercase">Reorder Level</label>
                    <input asp-for="Product.ReorderLevel" class="form-control" type="number" required />
                    <div class="form-text small text-end">Low stock alert threshold</div>
                    <span asp-validation-for="Product.ReorderLevel" class="text-danger small"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Product.Description" class="form-label fw-bold text-muted small text-uppercase">Description</label>
                <textarea asp-for="Product.Description" class="form-control bg-light" rows="4" placeholder="Add product details..."></textarea>
                <span asp-validation-for="Product.Description" class="text-danger small"></span>
            </div>
        </div>

        <div class="modal-footer border-top-0 px-2 pb-0">
            <button type="button" class="btn btn-light border" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary px-4 fw-bold shadow-sm">
                Save Changes
            </button>
        </div>
    </form>
</div>