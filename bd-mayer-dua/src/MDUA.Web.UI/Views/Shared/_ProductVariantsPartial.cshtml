@model MDUA.Entities.ProductVariantResult
<link rel="stylesheet" href="~/css/product-image.css" />

<div class="card mb-3 border-primary">
    <div class="card-header bg-light cursor-pointer" data-bs-toggle="collapse" data-bs-target="#addVariantCollapse">
        <div class="d-flex justify-content-between align-items-center">
            <h6 class="mb-0 text-primary fw-bold">+ Add New Variant</h6>
            <small class="text-muted">(Click to expand)</small>
        </div>
    </div>
    <div id="addVariantCollapse" class="collapse">
        <div class="card-body bg-white">
            <form id="form-add-single-variant">
                <input type="hidden" name="ProductId" value="@Model.ProductId" />
                <input type="hidden" name="VariantName" id="new-variant-name" />
                <input type="hidden" name="StockQty" value="0" />

                <div id="dynamic-attributes-container">
                </div>

                <button type="button" id="btn-add-dynamic-attr" class="btn btn-sm btn-outline-secondary mb-3">
                    <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
                    Add Attribute
                </button>

                <div class="row mt-2 border-top pt-2">
                    <div class="col-md-12">
                        <label class="small">Price</label>
                        <input type="number" name="VariantPrice" class="form-control form-control-sm"
                               value="@Model.BasePrice" placeholder="0.00" required />
                    </div>
                </div>

                <div class="mt-3 text-end">
                    <button type="button" id="btn-save-new-variant" class="btn btn-sm btn-success">
                        Save New Variant
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<select id="attribute-template" style="display:none;">
    <option value="">Select Attribute</option>
    @if (Model.AvailableAttributes != null)
    {
        foreach (var attr in Model.AvailableAttributes)
        {
            <option value="@attr.Id">@attr.Name</option>
        }
    }
</select>

@if (Model.Variants != null && Model.Variants.Any())
{
    <table class="table table-striped table-sm variants-table-modal">
        <thead>
            <tr>
                <th>Variant Name</th>
                <th>SKU</th>
                <th>Price</th>
                <th>Stock</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var v in Model.Variants)
            {
                // Stock Logic
                string stockClass = "bg-success"; // Default High
                if (v.StockQty <= 0) { stockClass = "bg-secondary"; } // Out of Stock
                else if (v.StockQty <= Model.ReorderLevel) { stockClass = "bg-danger"; } // Critical Low
                else if (v.StockQty <= (Model.ReorderLevel * 1.5)) { stockClass = "bg-warning text-dark"; } // Warning

                <tr data-variant-id="@v.Id">
                    <td class="align-middle">@v.VariantName</td>
                    <td class="align-middle" data-col="sku">
                        <span class="display-value sku-badge">@(v.SKU ?? "N/A")</span>
                        <input type="text" class="form-control form-control-sm edit-input"
                               value="@v.SKU" style="display:none; width: 100px;" />
                    </td>

                    <td class="align-middle" data-col="price">
                        <span class="display-value">
                            @if (v.DiscountedPrice < (v.VariantPrice ?? 0))
                            {
                                <div class="d-flex flex-column">
                                    <span class="original-price small">Tk. @v.VariantPrice?.ToString("0.00")</span>
                                    <span class="discounted-price">Tk. @v.DiscountedPrice.ToString("0.00")</span>
                                </div>
                            }
                            else
                            {
                                <span class="fw-bold text-dark">Tk. @v.VariantPrice?.ToString("0.00")</span>
                            }
                        </span>
                        <input type="number" class="form-control form-control-sm edit-input"
                               value="@v.VariantPrice?.ToString("0.00")" style="display:none; width: 80px;" />
                    </td>

                    <td class="align-middle" data-col="stock">
                        <span class="badge rounded-pill @stockClass px-3 py-2">
                            @v.StockQty
                        </span>
                    </td>

                    <td class="align-middle text-end">
                        <button type="button" class="btn btn-sm btn-light border text-primary js-manage-var-images me-1" title="Images">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                <circle cx="8.5" cy="8.5" r="1.5"></circle>
                                <polyline points="21 15 16 10 5 21"></polyline>
                            </svg>
                        </button>
                        <button type="button" class="btn btn-sm btn-light border text-warning js-edit-variant" title="Edit">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                            </svg>
                        </button>

                        <button type="button" class="btn btn-sm btn-light border text-danger js-delete-variant ms-1" title="Delete">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <polyline points="3 6 5 6 21 6"></polyline>
                                <path d="M19 6l-1 14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2L4 6m16 0H4"></path>
                                <line x1="10" y1="11" x2="10" y2="17"></line>
                                <line x1="14" y1="11" x2="14" y2="17"></line>
                            </svg>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="empty-state text-center py-4">
        <div class="text-muted mb-2" style="font-size: 2rem;">📦</div>
        <p class="text-muted mb-0">No variants found. Create your first variant above!</p>
    </div>
}