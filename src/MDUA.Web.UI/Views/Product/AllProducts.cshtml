@model IEnumerable<MDUA.Entities.Product>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Product List";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
    <style>
        /* Fix for Summernote z-index in Modals */
        .note-modal-backdrop {
            z-index: 1050 !important;
        }

        .note-modal {
            z-index: 1070 !important;
        }
        /* Must be higher than Bootstrap modal */
        .note-editor {
            background: white;
        }

        /* Ensure inputs inside Summernote modal are clickable */
        .note-modal-content {
            position: relative;
            z-index: 1075;
        }

        /* Bootstrap Modal Z-Index Fix */
        .modal-backdrop {
            z-index: 1040 !important;
        }

        .modal {
            z-index: 1050 !important;
        }

        .note-dropdown-menu {
            max-height: 300px !important; /* Limit height */
            overflow-y: auto !important; /* Enable scrollbar */
            box-shadow: 0 10px 25px rgba(0,0,0,0.15) !important;
        }

        /* Specific fix for the huge Color Palette */
        .note-color-palette {
            max-height: 200px !important;
            overflow-y: auto !important;
        }
    </style>
}
<link rel="stylesheet" href="~/css/product-list.css" />
<div class="fixed-layout-wrapper">
    <div class="header-section d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="fw-bold mb-0">Products</h2>
            <div class="text-muted small">Manage catalog, prices & inventory</div>
        </div>

        <!-- LIVE SEARCH INPUT -->
        <div class="position-relative" style="width: 300px;">
            <input type="text"
                   id="productSearchInput"
                   class="form-control rounded-pill ps-4"
                   placeholder="Type to search products..."
                   autocomplete="off">
            <span class="position-absolute top-50 end-0 translate-middle-y me-3 text-muted">🔍</span>
        </div>
    </div>

    <div class="glass-card">
        <div class="table-wrapper">
            @Html.AntiForgeryToken()
            <table class="table table-hover mb-0 align-middle products-table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Level</th>
                        <th>Slug</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th class="text-end" style="width: 120px;">Actions</th>
                    </tr>
                </thead>
                <!-- ID added here to target with JS -->
                <tbody id="productTableBody">
                    <!-- Load initial data using the partial -->
                    <partial name="_ProductTableRows" model="Model" />
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Modals {
    <div class="modal fade" id="productVariantsModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-xl">
            <div class="modal-content modal-custom">
                <div class="modal-header modal-header-custom">
                    <h5 class="modal-title">Variants: <span id="modal-product-name" class="text-warning"></span></h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="modal-variants-content">
                    <div class="loading-spinner text-center py-4"><div class="spinner-border text-primary"></div></div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="deleteProductModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content modal-custom border-danger">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Delete Product</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-4 text-center">
                    <div class="display-1 text-danger mb-3">⚠️</div>
                    <h4 id="modal-delete-product-name" class="fw-bold"></h4>
                    <p class="text-muted">This action cannot be undone. All variants will be lost.</p>
                    <div class="form-check d-inline-block text-start bg-light p-2 rounded border">
                        <input type="checkbox" id="confirm-delete-checkbox" class="form-check-input" />
                        <label for="confirm-delete-checkbox" class="form-check-label">I understand this is permanent</label>
                    </div>
                </div>
                <div class="modal-footer border-0 justify-content-center">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirm-delete-button" disabled>Delete Product</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editProductModal" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content modal-custom">
                <div class="modal-header modal-header-custom">
                    <h5 class="modal-title">Edit Product</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="modal-edit-content">
                    <div class="loading-spinner text-center py-4"><div class="spinner-border text-primary"></div></div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="productImagesModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content modal-custom">
                <div class="modal-header modal-header-custom">
                    <h5 class="modal-title">Manage Images</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="modal-images-content"></div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="productDiscountsModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content modal-custom">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">Discounts: <span id="modal-discount-product-name"></span></h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="modal-discounts-content">
                    <div class="loading-spinner text-center py-4"><div class="spinner-border text-success"></div></div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="deleteVariantModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content modal-custom">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Delete Variant</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-4">
                    <p>Delete <strong id="modal-delete-variant-name"></strong>?</p>
                    <button type="button" class="btn btn-danger w-100" id="confirm-delete-variant-button">Yes, Delete</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="deleteProductImageModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-sm">
            <div class="modal-content modal-custom">
                <div class="modal-body text-center p-4">
                    <p class="fw-bold text-danger">Delete Image?</p>
                    <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">No</button>
                    <button type="button" class="btn btn-sm btn-danger" id="btn-confirm-del-prod-img">Yes</button>
                </div>
            </div>
        </div>
    </div>

    

    <div class="modal fade" id="addVariantAttributeModal" tabindex="-1" aria-hidden="true" style="z-index: 10000 !important;">
        <div class="modal-dialog modal-sm modal-dialog-centered">
            <div class="modal-content modal-custom">
                <div class="modal-header bg-light py-2">
                    <h6 class="modal-title fw-bold">Add Attribute</h6>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="form-add-attr-to-variant">
                        <input type="hidden" id="target-variant-id" name="variantId" />
                        <div class="mb-2">
                            <label class="small text-muted">Attribute</label>
                            <select class="form-select form-select-sm" id="missing-attr-select"><option>Loading...</option></select>
                        </div>
                        <div class="mb-3">
                            <label class="small text-muted">Value</label>
                            <select class="form-select form-select-sm" id="missing-value-select" name="attributeValueId" disabled></select>
                        </div>
                        <button type="button" id="btn-confirm-add-attr" class="btn btn-sm btn-primary w-100">Add</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="variantImagesModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content modal-custom">
                <div class="modal-header modal-header-custom">
                    <h5 class="modal-title">Variant Images</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="modal-var-images-content"></div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="deleteVariantImageModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-sm">
            <div class="modal-content modal-custom">
                <div class="modal-body text-center p-3">
                    <p>Delete variant image?</p>
                    <button class="btn btn-sm btn-danger" id="btn-confirm-del-var-img">Delete</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="duplicateVariantModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content modal-custom border-warning">
                <div class="modal-body text-center p-4">
                    <h5 class="text-warning">Duplicate Variant</h5>
                    <p>The variant <strong id="duplicate-variant-name"></strong> already exists.</p>
                    <button class="btn btn-secondary" data-bs-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="productDetailsModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content modal-custom">
                <div class="modal-header modal-header-custom">
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="modal-details-content">
                    <div class="loading-spinner text-center"><div class="spinner-border text-primary"></div></div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="productVideosModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content modal-custom">
            <div class="modal-header modal-header-custom bg-dark text-white">
                <h5 class="modal-title">Videos: <span id="modal-video-product-name" class="text-warning"></span></h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-0">
                <div id="modal-videos-content" class="p-4">
                    <div class="loading-spinner text-center"><div class="spinner-border text-primary"></div></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteVideoModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content modal-custom border-danger">
            <div class="modal-body text-center p-4">
                <p class="fw-bold text-danger mb-3">Delete this video?</p>
                <div class="d-flex justify-content-center gap-2">
                    <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-sm btn-danger" id="btn-confirm-del-video">Delete</button>
                </div>
            </div>
        </div>
    </div>
</div>


}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('focusin', function (e) {
            if (e.target.closest(".note-modal")) {
                e.stopImmediatePropagation();
            }
        }, true);
        // 1. Configure the Toast Mixin
        const Toast = Swal.mixin({
            toast: true,
            position: 'top-end',
            showConfirmButton: false,
            timer: 3000,
            timerProgressBar: true,
            didOpen: (toast) => {
                toast.addEventListener('mouseenter', Swal.stopTimer)
                toast.addEventListener('mouseleave', Swal.resumeTimer)
            }
        });

        // Make Toast available globally for your other JS files
        window.Toast = Toast;

        $(document).ready(function() {
            // 2. CHECK TEMP DATA (For Add/Update Redirects)
            var successMsg = '@TempData["Success"]';
            var errorMsg = '@TempData["Error"]';

            if (successMsg) {
                Toast.fire({
                    icon: 'success',
                    title: successMsg
                });
            }

            if (errorMsg) {
                Toast.fire({
                    icon: 'error',
                    title: errorMsg
                });
            }

            // ... Your existing search logic ...
        });
        window.productConfig = {
            urls: {
                getVariantsPartial: '@Url.Action("GetVariantsPartial", "Product")',
                addSingleVariant: '@Url.Action("AddSingleVariant", "Product")',
                toggleStatus: '@Url.Action("ToggleStatus", "Product")',
                getProductDetailsPartial: '@Url.Action("GetProductDetailsPartial", "Product")',
                deleteConfirmed: '@Url.Action("DeleteConfirmed", "Product")',
                getEditPartial: '@Url.Action("GetEditPartial", "Product")',
                deleteVariant: '@Url.Action("DeleteVariant", "Product")',
                updateVariantPrice: '@Url.Action("UpdateVariantPrice", "Product")',
                getMissingAttributes: '@Url.Action("GetMissingAttributes", "Product")',
                addAttributeToVariant: '@Url.Action("AddAttributeToVariant", "Product")',
                getAttributeValues: '@Url.Action("GetAttributeValues", "Product")',
                getDiscounts: '@Url.Action("GetDiscountsPartial", "Product")',
                addDiscount: '@Url.Action("AddDiscount", "Product")',
                updateDiscount: '@Url.Action("UpdateDiscount", "Product")',
                deleteDiscount: '@Url.Action("DeleteDiscount", "Product")',
                getUpdatedPrice: '@Url.Action("GetUpdatedPrice", "Product")',
                getImages: '@Url.Action("GetImagesPartial", "Product")',
                uploadImage: '@Url.Action("UploadImage", "Product")',
                deleteImage: '@Url.Action("DeleteImage", "Product")',
                getVariantImages: '@Url.Action("GetVariantImagesPartial", "Product")',
                uploadVariantImage: '@Url.Action("UploadVariantImage", "Product")',
                deleteVariantImage: '@Url.Action("DeleteVariantImage", "Product")',
                updateVariantImageOrder: '@Url.Action("UpdateVariantImageOrder", "Product")',
                 getVideosPartial: '@Url.Action("GetVideosPartial", "Product")',
                addVideo: '@Url.Action("AddVideo", "Product")',
                deleteVideo: '@Url.Action("DeleteVideo", "Product")',
                setPrimaryVideo: '@Url.Action("SetPrimaryVideo", "Product")'
            }
        };

         $(document).ready(function() {
            let searchTimer;
            // Force the URL to ensure it matches the Controller Route
            const searchUrl = '/product/search-ajax';

            $('#productSearchInput').on('input', function() {
                const query = $(this).val();
                console.log("Typing: " + query); // Debug: Check if typing is detected

                clearTimeout(searchTimer);

                searchTimer = setTimeout(function() {
                    console.log("Sending request to: " + searchUrl); // Debug: Check URL

                    // Show loading opacity
                    $('#productTableBody').css('opacity', '0.5');

                    $.get(searchUrl, { query: query })
                        .done(function(data) {
                            console.log("Success! Data received.");
                            $('#productTableBody').html(data);
                            $('#productTableBody').css('opacity', '1');
                        })
                        .fail(function(xhr, status, error) {
                            console.error("Error:", error);
                            console.log(xhr.responseText); // This will print the exact error in console
                            $('#productTableBody').css('opacity', '1');
                        });
                }, 300); // 300ms delay
            });
        });
    </script>
    <script src="~/js/products-index.js" asp-append-version="true"></script>
}