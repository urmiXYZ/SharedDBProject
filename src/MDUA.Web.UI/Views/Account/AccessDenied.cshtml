@{
    Layout = null; 
    ViewData["Title"] = "Access Denied";
    string role = ViewBag.UserRole as string;
    string missingPerm = ViewBag.MissingPermission as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>
    <div class="login-container">
        <div class="glass-card text-center p-5" style="max-width: 500px;">

            <div class="mb-4">
                <span style="font-size: 4rem;">🚫</span>
            </div>

            <h2 class="fw-bold text-danger mb-2">Access Denied</h2>
            <p class="text-muted mb-4">You do not have permission to view this resource.</p>

            <div class="alert alert-warning text-start small bg-warning bg-opacity-10 border-warning border-opacity-25">
                <div class="d-flex justify-content-between">
                    <span class="fw-bold">Your Role:</span>
                    <span class="font-monospace">@role</span>
                </div>

                @if (!string.IsNullOrEmpty(missingPerm))
                {
                    <div class="d-flex justify-content-between mt-1">
                        <span class="fw-bold">Missing Permission:</span>
                        <span class="font-monospace text-danger">@missingPerm</span>
                    </div>
                }
            </div>

            <div class="mt-4">
                <a href="@Url.Action("Dashboard", "Home")" class="btn btn-light w-100">
                    &larr; Back to Dashboard
                </a>
            </div>
        </div>
    </div>
</body>
</html>