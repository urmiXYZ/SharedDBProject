
@model IEnumerable<MDUA.Entities.BulkOrderItemViewModel>
@if (Model == null || !Model.Any())
{
    <div class="text-center py-4 text-muted">
        <p>No items found for this order.</p>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-sm table-bordered mb-0 align-middle">
            <thead class="table-light">
                <tr>
                    <th>Product</th>
                    <th>Variant</th>
                    <th class="text-center" style="width: 80px;">Qty</th>
                    <th class="text-center" style="width: 100px;">Status</th>
                    <th class="text-center" style="width: 180px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    // Create unique IDs
                    var formId = "form-" + item.PoRequestId;
                    var btnGroupId = "btn-group-" + item.PoRequestId;

                    <tr>
                        <td class="fw-bold">@item.ProductName</td>
                        <td>@item.VariantName</td>
                        <td class="text-center">@item.Quantity</td>
                        <td class="text-center">
                            @if (item.Status == "Received")
                            {
                                <span class="badge bg-success">Received</span>
                            }
                            else if (item.Status == "Rejected")
                            {
                                <span class="badge bg-danger">Rejected</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">@item.Status</span>
                            }
                        </td>
                        <td class="text-center">
                            @if (item.Status == "Pending")
                            {
                                <div id="@btnGroupId" class="d-flex gap-1 justify-content-center">
                                    <button class="btn btn-sm btn-outline-success js-btn-receive-toggle px-2"
                                            data-target="@formId"
                                            title="Receive Item">
                                        <i class="bi bi-check-lg"></i> Receive
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger js-btn-reject px-2"
                                            data-poid="@item.PoRequestId"
                                            title="Reject Item">
                                        <i class="bi bi-x-lg"></i> Reject
                                    </button>
                                </div>
                            }
                            else
                            {
                                <span class="text-muted small">
                                    <i class="bi bi-check-all"></i> Completed
                                </span>
                            }
                        </td>
                    </tr>

                    @* Hidden Receive Form Row *@
                    @if (item.Status == "Pending")
                    {
                        <tr id="@formId" class="receive-form-row d-none bg-light">
                            <td colspan="5" class="p-0">
                                <div class="p-2 border-top border-primary bg-light">
                                    <h6 class="text-primary mb-2 small fw-bold">
                                        <i class="bi bi-arrow-return-right"></i> Receiving Details:
                                    </h6>
                                    <div class="row g-1 align-items-end">

                                        @* Quantity *@
                                        <div class="col-6 col-sm-2">
                                            <label class="small fw-bold text-secondary" style="font-size: 0.75rem;">Qty</label>
                                            <input type="number"
                                                   class="form-control form-control-sm js-input-qty"
                                                   value="@item.Quantity"
                                                   min="1"
                                                   max="@item.Quantity">
                                        </div>

                                        @* Price *@
                                        <div class="col-6 col-sm-2">
                                            <label class="small fw-bold text-secondary" style="font-size: 0.75rem;">Price</label>
                                            <input type="number"
                                                   class="form-control form-control-sm js-input-price"
                                                   placeholder="0.00">
                                        </div>

                                        @* Invoice *@
                                        <div class="col-6 col-sm-2">
                                            <label class="small fw-bold text-secondary" style="font-size: 0.75rem;">Invoice</label>
                                            <input type="text"
                                                   class="form-control form-control-sm js-input-invoice"
                                                   placeholder="Ref #">
                                        </div>

                                        @* Remarks *@
                                        <div class="col-6 col-sm-3">
                                            <label class="small fw-bold text-secondary" style="font-size: 0.75rem;">Remarks</label>
                                            <input type="text"
                                                   class="form-control form-control-sm js-input-remarks"
                                                   placeholder="Optional notes">
                                        </div>

                                        @* Buttons *@
                                        <div class="col-12 col-sm-3">
                                            <label class="small fw-bold text-secondary d-none d-sm-block" style="font-size: 0.75rem;">&nbsp;</label>
                                            <div class="d-flex gap-1">
                                                <button class="btn btn-sm btn-primary flex-fill js-btn-confirm-receive"
                                                        style="min-height: 30px;"
                                                        data-variantid="@item.ProductVariantId"
                                                        data-max-qty="@item.Quantity"
                                                        data-poid="@item.PoRequestId">
                                                    Confirm
                                                </button>

                                                <button class="btn btn-sm btn-outline-secondary flex-fill js-btn-cancel-receive"
                                                        style="min-height: 30px;"
                                                        data-target="@formId">
                                                    Cancel
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="mt-2 text-center border-top pt-2">
        <small class="text-muted">Total Order Items: <strong>@Model.Sum(x => x.Quantity)</strong></small>
    </div>
}